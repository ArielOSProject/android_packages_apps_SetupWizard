<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                style="@style/PageContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/PageSummaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/summary_margin_bottom"
                    android:paddingLeft="@dimen/content_margin_left"
                    android:paddingRight="@dimen/content_margin_right"
                    android:text="@string/parental_control_send_sms"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/init_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:text="@string/parental_control_sms_format"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/PageSummaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/summary_margin_bottom"
                    android:paddingLeft="@dimen/content_margin_left"
                    android:paddingRight="@dimen/content_margin_right"
                    android:text="@string/parental_control_setup_info"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <fragment
        android:id="@+id/navigation_bar"
        android:name="com.android.setupwizard.navigationbar.SetupWizardNavBar"
        style="@style/setup_wizard_navbar_style" />

    <include layout="@layout/header_condensed" />
</LinearLayout>
